    }

    // caso nÃ£o encontrado
    await interaction.reply({ content: 'Script ou aÃ§Ã£o nÃ£o encontrada para esse botÃ£o.', ephemeral: true });
  } catch (err) {
    console.error('Erro em interactionCreate:', err);
    try { if (!interaction.replied) await interaction.reply({ content: 'Ocorreu um erro ao processar a interaÃ§Ã£o.', ephemeral: true }); } catch {}
  }
});
