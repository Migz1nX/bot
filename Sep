// FunÃ§Ã£o auxiliar para enviar resposta ephemeral com imagem
function replyGameEphemeral(interaction, content) {
    interaction.reply({ 
        content, 
        ephemeral: true, 
        embeds: [{ image: { url: jogoImage } }] 
    });
}

