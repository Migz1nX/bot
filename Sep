// FunÃ§Ã£o auxiliar para enviar ephemeral com imagem
function replyGame(message, description) {
  message.reply({
    content: description,
    ephemeral: true,
    embeds: [{
      title: "Script do jogo",
      description: description,
      image: { url: gameImage },
      color: 0xff0000
    }]
  });
}

