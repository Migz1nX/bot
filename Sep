// FunÃ§Ã£o utilitÃ¡ria para envio de embeds ephemerais
function ephemeralGameReply(message, title, description) {
  message.reply({
    embeds: [{
      title: title,
      description: description,
      color: 0xff0000,
      image: { url: gameImage }
    }],
    ephemeral: true
  });
}

