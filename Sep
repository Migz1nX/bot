      return await interaction.update({
        embeds: [{ title: 'PÃ¡gina 2 â€” Scripts', description: 'Escolha um jogo', color: 0xff0000, image: { url: GAME_IMAGE } }],
        components
      });
    }

    if (id === 'pag3') {
      const components = [
        { type: 1, components: [
          { type: 2, custom_id: 'mimic3', label: 'Mimic (All chapters)', style: 1, emoji: 'ğŸ”¥' },
