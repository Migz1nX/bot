const userVars = {};
const afkUsers = new Map();

function getVar(id, k) { if (!userVars[id]) userVars[id] = { Money: 0, Bank: 0 }; return userVars[id][k] || 0; }
function setVar(id, k, v) { if (!userVars[id]) userVars[id] = { Money: 0, Bank: 0 }; userVars[id][k] = v; }

